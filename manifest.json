{
  "manifest_version": 3,
  "name": "website-blocker",
  "version": "1.1",
  "description": "Website Blocker: 特定のサイトをブロックして、指定したURLへ飛ばします。",
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
